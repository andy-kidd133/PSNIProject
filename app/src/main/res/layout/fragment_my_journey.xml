<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainApp.MyJourneyFragment">


        <!--*************** DETAILS **************-->

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/laca_text_medium"
            android:text=""
            android:textSize="45sp" />

        <TextView
            android:id="@+id/tvCrimeDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/tvName"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/laca_text_light"
            android:textSize="25sp"
            android:text=""/>

        <TextView
            android:id="@+id/tvReportDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/tvCrimeDate"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/laca_text_light"
            android:textSize="25sp"
            android:text=""/>


        <!--******************* STATEMENT INFO *******************-->

        <TextView
            android:id="@+id/tvJStatementHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/tvReportDate"
            android:fontFamily="@font/laca_text_medium"
            android:text="1. Statement Information"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/ivGreenTick"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/tvReportDate"
            android:layout_alignParentRight="true"
            android:layout_marginRight="105dp"
            android:src="@drawable/green_tick"/>

        <TextView
            android:id="@+id/tvJDateSubmitted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/tvJStatementHeading"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/laca_text_light"
            android:textSize="18sp"
            android:text=""/>

        <Button
            android:id="@+id/btnDownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download"
            android:layout_below="@id/tvJDateSubmitted"
            android:layout_marginRight="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"/>


        <TextView
            android:id="@+id/tvJFileName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvJDateSubmitted"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="22dp"
            android:text=""/>


        <!--*************** PPS ***************-->

        <TextView
            android:id="@+id/tvJPPSHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/tvJFileName"
            android:fontFamily="@font/laca_text_medium"
            android:text="2. Public Prosecution Service"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/ivGreenTick1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="35dp"
            android:layout_below="@id/tvJFileName"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            android:src="@drawable/green_tick"/>

        <TextView
            android:id="@+id/tvJPPSUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/tvJPPSHeading"
            android:fontFamily="@font/laca_text_light"
            android:text=""
            android:textSize="18sp" />


        <!--*************** COURT HEADING ***************-->


        <TextView
            android:id="@+id/tvJCourtHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/tvJPPSUpdate"
            android:fontFamily="@font/laca_text_medium"
            android:text="3. Court Hearing"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/ivGreenTick2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:layout_below="@id/tvJPPSUpdate"
            android:layout_alignParentRight="true"
            android:layout_marginRight="185dp"
            android:visibility="invisible"
            android:src="@drawable/green_tick"/>

        <TextView
            android:id="@+id/tvJCourtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/tvJCourtHeading"
            android:fontFamily="@font/laca_text_light"
            android:textSize="18sp"
            android:text=""/>

        <TextView
            android:id="@+id/tvJCourtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/tvJCourtDate"
            android:fontFamily="@font/laca_text_light"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text=""/>

        <TextView
            android:id="@+id/tvJCourtAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/tvJCourtName"
            android:fontFamily="@font/laca_text_light"
            android:textSize="18sp"
            android:text=""/>

        <com.example.psniproject.MainApp.CustomMapView
            android:id="@+id/mapViewHolder"
            android:layout_width="150dp"
            android:layout_height="225dp"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:layout_below="@id/tvJCourtDate"
            android:layout_marginTop="30dp"/>


        <!--*************** CONVICTION HEADING ***************-->


        <TextView
            android:id="@+id/tvJVerdictHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/tvJCourtAddress"
            android:fontFamily="@font/laca_text_medium"
            android:visibility="invisible"
            android:text="4. Verdict"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/ivGreenTick3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="90dp"
            android:layout_below="@id/tvJCourtAddress"
            android:layout_alignParentRight="true"
            android:layout_marginRight="210dp"
            android:visibility="invisible"
            android:src="@drawable/green_tick"/>

        <TextView
            android:id="@+id/tvJVerdict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/tvJVerdictHeading"
            android:fontFamily="@font/laca_text_light"
            android:textSize="18sp"
            android:visibility="invisible"
            android:text="The defendant has been:"/>

        <TextView
            android:id="@+id/tvJVerdictResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            android:layout_below="@id/tvJVerdict"
            android:fontFamily="@font/laca_text_medium"
            android:textSize="22sp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="@color/md_red_500"
            android:text=""/>





    </RelativeLayout>

</ScrollView>